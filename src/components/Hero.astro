      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-slate-900 dark:text-white">
        {s.hero.name}
      </h1>
      <p class="mt-2 text-lg font-medium text-primary dark:text-primary-light">
        {s.hero.role}
      </p>
      <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
        {s.hero.school}
      </p>
      <p class="mt-4 text-slate-600 dark:text-slate-300 leading-relaxed max-w-xl">
        {s.hero.bio}
      </p>
      <!-- Social Links -->
