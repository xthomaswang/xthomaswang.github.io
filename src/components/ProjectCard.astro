---
import type { Lang } from '../i18n';
import { t } from '../i18n';

interface Props {
  title: string;
  description: string;
  category: 'research' | 'software';
  tags: string[];
  links?: {
    github?: string;
    paper?: string;
    demo?: string;
  };
  lang: Lang;
}

const { title, description, category, tags, links, lang } = Astro.props;
const s = t(lang);

const categoryStyle = category === 'research'
  ? 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400'
  : 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400';

const categoryLabel = category === 'research'
  ? s.projects.filterResearch
  : s.projects.filterSoftware;
---

<div class="group p-5 rounded-xl border border-slate-200 dark:border-slate-700/50 bg-white dark:bg-slate-800/30 hover:border-slate-300 dark:hover:border-slate-600 hover:shadow-md transition-all duration-200" data-category={category}>
  <div class="flex items-start justify-between gap-3 mb-3">
    <h3 class="font-semibold text-slate-900 dark:text-white leading-snug">{title}</h3>
    <span class={`shrink-0 px-2 py-0.5 text-xs font-medium rounded-full ${categoryStyle}`}>
      {categoryLabel}
    </span>
  </div>
  <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed mb-4">{description}</p>
  <div class="flex flex-wrap gap-1.5 mb-4">
    {tags.map((tag) => (
      <span class="px-2 py-0.5 text-xs bg-slate-100 dark:bg-slate-700/50 text-slate-600 dark:text-slate-400 rounded-md">
        {tag}
      </span>
    ))}
  </div>
  {links && (
    <div class="flex items-center gap-3 pt-3 border-t border-slate-100 dark:border-slate-700/30">
      {links.github && (
        <a href={links.github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          {s.projects.viewGitHub}
        </a>
      )}
      {links.paper && (
        <a href={links.paper} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white transition-colors">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
          {s.projects.viewPaper}
        </a>
      )}
      {links.demo && (
        <a href={links.demo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white transition-colors">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          {s.projects.viewDemo}
        </a>
      )}
    </div>
  )}
</div>
