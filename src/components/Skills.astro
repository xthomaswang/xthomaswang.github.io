---
import { t, type Lang } from '../i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const s = t(lang);

const skills = [
  { label: s.skills.languages, items: ['Python', 'C++', 'Swift', 'JavaScript', 'Java', 'Go', 'Scala'] },
  { label: s.skills.aiml, items: ['PyTorch', 'TensorFlow', 'CoreML', 'LLM', 'MLSys', 'OpenCV', 'NumPy', 'Pandas'] },
  { label: s.skills.mobile, items: ['SwiftUI', 'UIKit', 'React Native', 'Redux', 'Core Data'] },
  { label: s.skills.backend, items: ['FastAPI', 'Node.js', 'Gin (Go)', 'PostgreSQL', 'MySQL', 'SQLite', 'Firebase'] },
  { label: s.skills.concepts, items: ['MVVM', 'RESTful APIs', 'CI/CD', 'HPC', 'Data Privacy'] },
];
---

<section id="skills" class="py-12">
  <h2 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-white mb-6">
    {s.skills.title}
  </h2>
  <div class="space-y-4">
    {skills.map((group) => (
      <div class="flex flex-wrap items-baseline gap-x-3 gap-y-2">
        <span class="text-sm font-medium text-slate-500 dark:text-slate-400 w-24 shrink-0">{group.label}</span>
        <div class="flex flex-wrap gap-1.5">
          {group.items.map((item) => (
            <span class="px-2.5 py-1 text-xs bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-md">
              {item}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
