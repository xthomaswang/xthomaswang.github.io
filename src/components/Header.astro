---
import ThemeToggle from './ThemeToggle.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import { t, type Lang } from '../i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const s = t(lang);
const base = lang === 'zh' ? '/zh' : '';
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-700/50">
  <nav class="max-w-5xl mx-auto px-5 sm:px-8 h-14 flex items-center justify-between">
    <a href={`${base}/`} class="font-semibold text-lg tracking-tight text-slate-900 dark:text-white hover:text-primary dark:hover:text-primary-light transition-colors">
      XW
    </a>
    <div class="flex items-center gap-1 sm:gap-4">
      <div class="hidden sm:flex items-center gap-1">
        <a href={`${base}/#experience`} class="px-3 py-1.5 text-sm text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">{s.nav.experience}</a>
        <a href={`${base}/#projects`} class="px-3 py-1.5 text-sm text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">{s.nav.projects}</a>
        <a href={`${base}/#resume`} class="px-3 py-1.5 text-sm text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">{s.nav.resume}</a>
      </div>
      <div class="flex items-center gap-1">
        <LanguageSwitcher lang={lang} />
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>
